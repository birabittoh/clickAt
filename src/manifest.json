{
  "manifest_version": 3,
  "name": "clickAt",
  "version": "1.0",
  "description": "Click somewhere at a specific time.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
